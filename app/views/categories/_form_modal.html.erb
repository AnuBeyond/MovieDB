<%= form_for @category, local: true do |form| %>
<div class="modal" tabindex="-1" role="dialog" id="category_modal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">New Category</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
            <div class="form-group">
                <label for="">Category Name</label>
                <%= form.text_field :name, class: 'form-control', placeholder: 'add category name here' %>
            </div>
            <div class="form-group">
                <label for="">Category Parent</label>
                <strong>
                  <%= form.select :parent_id, nested_dropdown(@roots), {include_blank: true}, {class: "form-control"} %>
                </strong>
                <small id="" class="form-text text-muted">Keep empty for root category</small>
            </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </div>
  </div>
</div>
<% end %>
